<odoo>
    <record id="res_config_settings_view_form_inherit_default_customer_section" model="ir.ui.view">
      <field name="name">res.config.settings.view.form.inherit.default.customer.section</field>
      <field name="model">res.config.settings</field>
      <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//app[@name='sale_management']/block[@id='pricing_setting_container']" position="after">
          <block title="Default Customer" id="default_customer_setting_container" name="default_customer_setting_container">
            <setting id="default_customer_setting"
                     string="Propose a default customer on new quotations"
                     help="When enabled, the selected customer will be proposed automatically on new quotations."
                     company_dependent="1">
  
              <field name="enable_default_customer" class="w-auto"/>
              <label for="enable_default_customer"/>
  
              <div class="text-muted mt-2" invisible="not enable_default_customer">
                Select the customer that will appear by default when creating a new quotation.
              </div>
  
              <div class="mt-2" invisible="not enable_default_customer">
                <label for="sale_default_customer_id" class="o_light_label me-2"/>
                <field name="sale_default_customer_id" options="{'no_create_edit': True}"/>
              </div>
  
            </setting>
          </block>
        </xpath>
      </field>
    </record>
  </odoo>
  