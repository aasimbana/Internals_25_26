<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_account_invoice_report_search_inherit" model="ir.ui.view">
            <field name="name">account.invoice.report.search.inherit.provincia</field>
            <field name="model">account.invoice.report</field>
            <field name="inherit_id" ref="account.view_account_invoice_report_search"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='status']" position="after">
                    <filter string="Provincia" name="provincia" context="{'group_by': 'provincia_id'}"/>
                </xpath>

                <xpath expr="//field[@name='product_categ_id']" position="after">
                    <field name="provincia_id"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
