<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Paperformat -->
    <record id="paperformat_day_report_landscape" model="report.paperformat">
        <field name="name">Day Report Landscape A4</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">15</field>
        <field name="margin_bottom">15</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
    </record>

    <!-- AcciÃ³n del reporte -->
    <record id="action_report_day_helpdesk_pdf" model="ir.actions.report">
        <field name="name">Day Report PDF</field>
        <field name="model">helpdesk.report.date</field> 
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">helpdesk_custom.day_report_template</field>
        <field name="report_file">helpdesk_custom.day_report_template</field>
    </record>
