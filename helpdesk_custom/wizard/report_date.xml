<odoo>
    <record id="view_helpdesk_report_date_form" model="ir.ui.view">
        <field name="name">helpdesk.report.date.form</field>
        <field name="model">helpdesk.report.date</field>
        <field name="arch" type="xml">
            <form string="Reportes de Helpdesk">
                <group>
                    <group>
                        <field name="date_start"/>
                    </group>
                    <group>
                        <field name="company_id" readonly="1"/>
                        <field name="employee_ids" widget="many2many_tags" readonly="1"/>
                    </group>
                </group>
  
                <footer>
                  <!-- <button string="Generar PDF" type="object" name="action_generate_pdf" class="btn-primary"/> -->
                  <button string="Generar Excel" type="object" name="action_generate_reporte_dia" class="btn-primary"/>
                  <button string="Cancelar" class="btn-secondary" special="cancel"/>           
                </footer>
            </form>
        </field>
    </record>
  
    <record id="helpdesk_report_date_action" model="ir.actions.act_window">
        <field name="name">Reporte de Helpdesk</field>
        <field name="res_model">helpdesk.report.date</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="helpdesk_custom.view_helpdesk_report_date_form"/>
        <field name="target">new</field>
    </record>
  </odoo>
  