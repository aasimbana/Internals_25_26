<odoo>
  <record id="view_helpdesk_report_wizard_form" model="ir.ui.view">
      <field name="name">helpdesk.report.wizard.form</field>
      <field name="model">helpdesk.report.wizard</field>
      <field name="arch" type="xml">
          <form string="Helpdesk Reports">
              <group>
                  <group>
                      <field name="date_start"/>
                      <field name="date_end"/>
                  </group>
                  <group>
                      <field name="company_id" readonly="1"/>
                      <field name="employee_ids" widget="many2many_tags" readonly="0"/>
                  </group>
              </group>

              <footer>
                <button string="Generate PDF" type="object" name="action_generate_pdf" class="btn-primary"/>
                <button string="Generate Excel" type="object" name="action_generate_excel" class="btn-primary"/>
                <button string="Cancel" class="btn-secondary" special="cancel"/>           
              </footer>
          </form>
      </field>
  </record>

  <record id="helpdesk_report_wizard_action" model="ir.actions.act_window">
      <field name="name">Helpdesk Reports</field>
      <field name="res_model">helpdesk.report.wizard</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="helpdesk_custom.view_helpdesk_report_wizard_form"/>
      <field name="target">new</field>
  </record>
</odoo>
