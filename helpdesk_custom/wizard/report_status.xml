<odoo>
    <record id="view_helpdesk_report_status_form" model="ir.ui.view">
        <field name="name">helpdesk.report.status.form</field>
        <field name="model">helpdesk.report.status</field>
        <field name="arch" type="xml">
            <form string="Status report">
                <group>
                    <group>
                        <field name="company_id" readonly="0" help="Select the company for which you want to generate the report."/>
                    </group>
                    <group>
                        <field name="date_end"/>
                    </group>    
                </group>
                
                <footer>
                  <button string="Generate PDF" type="object" name="action_print_status_report_pdf" class="btn-primary"/>
                  <button string="Generate Excel" type="object" name="action_generate_report_status_xlsx" class="btn-primary"/>
                  <button string="Cancel" class="btn-secondary" special="cancel"/>           
                </footer>
            </form>
        </field>
    </record>

    <record id="helpdesk_report_status_action" model="ir.actions.act_window">
        <field name="name">Status report</field>
        <field name="res_model">helpdesk.report.status</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="helpdesk_custom.view_helpdesk_report_status_form"/>
        <field name="target">new</field>
    </record>
</odoo>
